	<div class="weui-cells">
		<div class="weui-cell">
			<div class="weui-cell__hd"><img src=""></div>
			<div class="weui-cell__bd">
				<p>会员卡</p>
			</div>
			<div class="weui-cell__ft"></div>
		</div>
		<div class="weui-cell">
			<div class="weui-cell__hd"><img src=""></div>
			<div class="weui-cell__bd">
				<p>地址管理</p>
			</div>
			<div class="weui-cell__ft"></div>
		</div>

		<div class="weui-cell">
			<div class="weui-cell__hd"><img src=""></div>
			<div class="weui-cell__bd">
				<p>我的收藏</p>
			</div>
			<div class="weui-cell__ft"></div>
		</div>

		<div class="weui-cell">
			<div class="weui-cell__hd"><img src=""></div>
			<div class="weui-cell__bd">
				<p>积分兑换</p>
			</div>
			<div class="weui-cell__ft"></div>
		</div>
		<div class="weui-cell">
			<div class="weui-cell__hd"><img src=""></div>
			<div class="weui-cell__bd">
				<p>关于我们</p>
			</div>
			<div class="weui-cell__ft"></div>
		</div>
	</div>
