		<!--<div class='p-02'></div>	-->
		<!--<div class='p-03'></div>	-->
	<!--</div>-->
	<div class='content'>
		<div class='main-nav-panel'>
			<div class='m-nav mn1' data-target="@Url.Action("rec")">
				<i class="fa fa-star mn-ico" aria-hidden="true"></i>
				<span class='mnf-01'>每日推荐</span>
			</div>
			<div class='m-nav mn2' data-target="@Url.Action("goods")">
				<i class="fa fa-shopping-basket mn-ico" aria-hidden="true"></i>
				<span class='mnf-02'>货架</span>
			</div>
			<div class='m-nav mn3' data-target="@Url.Action("order")">
				<i class="fa fa-shopping-cart mn-ico" aria-hidden="true"></i>
				<span class='mnf-03'>点餐</span>
			</div>
			<div class='m-nav mn4' data-target="@Url.Action("reserve")">
				<i class="fa fa-clock-o mn-ico" aria-hidden="true"></i>
				<span class='mnf-04'>预订</span>
			</div>
			<div class='m-nav mn5' data-target="@Url.Action("discount")">
				<i class="fa fa-heartbeat mn-ico" aria-hidden="true"></i>
				<span class='mnf-05'>优惠活动</span>
			</div>
		</div>	
	</div>
</div>
<div class="swipe swipe-right">
	<div class='swipe-right-title'>
		<i class="fa fa-calendar" aria-hidden="true" id="actCalendar"></i>
		活动日历
	</div>
</div>

<div class='swipe-right-card-box'>
	<div class='active-card act-01' data-type="1">
		<i class="fa fa-calendar-check-o" aria-hidden="true"></i>
		签到送积分
	</div>
	<div class='active-card act-02' data-type="2">
		<i class="fa fa-clock-o" aria-hidden="true"></i>
		套餐预订8.5折
		<div class='act-card-info-panel'>
			<div class='card-bg'></div>
			<div class='usr-bar'>
				<div class='usr-bar-bg'></div>
				<h2>￥8.5 <span>￥10</span></h2>
				<p>培根三明治套餐</p>
			</div>
		</div>
	</div>
	<div class='active-card act-03' data-type="3">
		<i class="fa fa-shopping-cart" aria-hidden="true"></i>
		点餐抵用券
		<div class='act-card-info-panel'>
			<h2>￥4餐品抵用券</h2>
			<p>满30可用,可与其他折扣重叠使用,满减以折后价计算</p>
			<span>2018年2月16日当时有效</span>
		</div>
	</div>
	<div class='active-card act-04' data-type="4">
		<i class="fa fa-share-alt-square" aria-hidden="true"></i>
		驴友分享会
		<div class='act-card-info-panel'>
			<h3>登山经验分享</h2>
			<p>讲师：张松</p>
			<p>活动时间：2018.2.16晚  20:30 - 10:30</p>
			<p>报名时间：2018.1.15 - 2018.2.15</p>
			<p>报名费：￥20</p>
			<h4>活动期间所有餐品8折</h4>
		</div>
	</div>
</div>

