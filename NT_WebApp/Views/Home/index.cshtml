<body ontouchstart>
<div class='page ui-panel-animation scroll'>
	<header class='header-nav'>
		<i class="fa fa-user-circle usr-ico" aria-hidden="true" id='userIco' data-position="6"></i>
		<!--<i class="fa fa-bars swipe-ico" aria-hidden="true" id='swipeIco' data-position="-8"></i>-->
		<div class="swipe-ico" id='swipeIco' data-position="-8">
			<i class="fa fa-calendar" aria-hidden="true"></i>
			每日活动 (๑•̀ㅂ•́)و✧
		</div>
	</header>
	<!--<div class='parallax-panel'>-->
