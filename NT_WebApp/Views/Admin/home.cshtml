		  //var editor = new MediumEditor('.editable');
		  /*
            editor2 = new MediumEditor('.secondEditable', {
                toolbar: {
                    buttons: ['bold', 'italic', 'quote', 'pre']
                }
            });
		*/	
		});
</script>
