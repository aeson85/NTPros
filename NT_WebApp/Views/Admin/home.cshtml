<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <title>弄堂 Brunch 后台管理系统登录</title>
    <meta charset="UTF-8">
	<meta http-equiv="Cache" content="no-cache">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
	<meta name="apple-mobile-web-app-capable" content="yes">
	<meta name="apple-mobile-web-app-status-bar-style" content="black">
	<link rel="stylesheet" asp-href-include="css/font-awesome.min.css" />
	<link rel="stylesheet" asp-href-include="css/medium-editor.css" />
	<link rel="stylesheet" asp-href-include="css/default.min.css" />

	<!--
	<link rel="stylesheet" asp-href-include="css/*.min.css" />
	<link rel="stylesheet" asp-href-include="css/ntui.css" />
	-->
	<style>
		body{margin:0;padding:0;background:#2d2d2d;font-family: "Helvetica Neue",Helvetica,sans-serif;color:#fefefe;font-size:12px;}
		.container{position:relative;display:flex;overflow:hidden;width:100%;height:100%;}
		.tool-bar{position:relative;-webkit-box-flex: 0;-webkit-flex: 0;flex: 0;background:#222;height:100%;}
		.control-nav{position:relative;-webkit-box-flex: 0;-webkit-flex: 0;flex: 0;background:#3e3d3d;height:100%;}
		.content-panel{position:relative;-webkit-box-flex:1;-webkit-flex: 1;flex: 1;height:100%;}
		.tool-btn{position:relative;width:30px;overflow:hidden;margin:15px;}
		.tool-btn i{position:relative;display:block;font-size:30px;width:30px;cursor:pointer;}
		.b-on{color:#f3cd8f;}
		.b-off{color:#fefefe;}
		
		.ctl-panel{position:relative;padding:0 15px;display:none;}
		.admin-panel{width:240px;}
		.goods-panel{width:600px;overflow:hidden;}
		.g-info-panel{width:600px;overflow-x:hidden;}
		.g-info-panel span{width:46px;}
		.g-info-panel input{background:none;border-radius:0px;border:none;border-bottom:solid 1px #505050;color:#fefefe;}
		.g-info-panel .input-small{width:30px;margin:0 15px 0 0;}
		.order-panel{width:240px;}
		.res-panel{width:240px;}
		.panel-title{font-size:16px;font-weight:bold;border-bottom:solid 3px #4c7f86;height:50px;line-height:50px;margin:0 0 15px 0;}
		.panel-title i{position:relative;float:right;font-size:24px;color:#fefefe;display:block;height:53px;line-height: 53px;cursor:pointer;margin:0 0 0 15px;}
		span{font-size: 12px;font-weight: bold;display: block;height: 30px;line-height: 30px;width: 52px;}
		input{border:solid 1px #222;outline:none;width:150px;height:30px;line-height:30px;border-radius:3px;padding:0 15px;background:#aba9a9;}
		.admin-panel button{border:solid 1px #222;outline:none;width:100px;height:30px;line-height:30px;border-radius:3px;padding:0 15px;background:#4c7f86;color:#fefefe;font-weight:bold;cursor:pointer;}
		.admin-panel button:hover{background:#fefefe;color:#222;}


		.g-view-main{position:relative;width:580px;height:300px;margin:10px auto;background:#333;}
		.g-view-more{position:relative;overflow:hidden;margin:0 0 20px 0;}
		.g-view{position:relative;width:172px;height:120px;margin:10px;float:left;background:#333;}


		.editable{width:472px;min-height:100px;border-radius: 3px;background:#fdfdfd;padding:10px;outline:none;color:#222;}
	</style>
</head>
<body>
<div class="container">
	<div class="tool-bar panel">
		<div class="tool-btn"><i class="fa fa-user-circle b-off" aria-hidden="true" data-flag="admin"></i></div>	
		<div class="tool-btn"><i class="fa fa-cutlery b-on" aria-hidden="true" data-flag="goods"></i></div>	
		<div class="tool-btn"><i class="fa fa-shopping-cart b-off" aria-hidden="true" data-flag="order"></i></div>	
		<div class="tool-btn"><i class="fa fa-clock-o b-off" aria-hidden="true" data-flag="res"></i></div>	
	</div>
	<div class="control-nav panel">
	
		<div class="admin-panel ctl-panel" id="adminPanel">
			<div class="panel-title">修改管理员密码</div>
			<table cellspacing="1" cellpadding="1">
				<tr>
					<td><span>原密码</span></td>
					<td><input type="password"/></td>
				</tr>
				<tr>
					<td><span>新密码</span></td>
					<td><input type="password"/></td>
				</tr>
				<tr>
					<td><span>确认密码</span></td>
					<td><input type="password"/></td>
				</tr>
				<tr>
					<td></td>
					<td><button>确认修改</button></td>
				</tr>
			</table>
		</div>

		<div class="goods-panel ctl-panel" id="goodsPanel">
			<div class="panel-title">
				商品信息
				<i class="fa fa-plus" aria-hidden="true"></i>
				<i class="fa fa-eraser" aria-hidden="true"></i>
			</div>
			<div class="g-info-panel">
				<div class="g-view-main"></div>
				<div class="g-view-more">
					<div class="g-view"></div>
					<div class="g-view"></div>
					<div class="g-view"></div>
				</div>

				<table cellspacing="10" cellpadding="1">
					<tr>
						<td><span>名称 :</span></td>
						<td colspan="5"><input type="text"/></td>
					</tr>
					<tr>
						<td><span>标题 :</span></td>
						<td colspan="5"><input type="text"/></td>
					</tr>
					<tr>
						<td><span>简介 :</span></td>
						<td colspan="5">
							<div class='editable' id='desc' contenteditable='true'></div>
						</td>
					</tr>
					<tr>
						<td><span>详情 :</span></td>
						<td colspan="5">
							<div class='editable' contenteditable='true'></div>
						</td>
					</tr>
					<tr>
						<td><span>原价 :</span></td>
						<td>￥<input class="input-small" type="text"/></td>
						<td><span>现价 :</span></td>
						<td>￥<input class="input-small" type="text"/></td>
						<td><span>会员价 :</span></td>
						<td>￥<input class="input-small" type="text"/></td>
					</tr>
					<!--<tr>-->
						<!--<td><span>商品现价</span></td>-->
						<!--<td><input type="text" id="adminPwd"/></td>-->
					<!--</tr>-->
					<!--<tr>-->
						<!--<td><span>商品会员价</span></td>-->
						<!--<td><input type="text" id="adminPwd"/></td>-->
					<!--</tr>-->
				</table>
			</div>
		</div>
		<div class="order-panel ctl-panel" id="orderPanel">2</div>
		<div class="res-panel ctl-panel" id="resPanel">3</div>
	</div>
	<div class="content-panel panel">
	</div>
</div>
<script asp-src-include="js/public/jquery-2.1.0.min.js"></script>
<script asp-src-include="js/medium-editor.js"></script>
<script>
var registSimpleEditor = function(dom,txt){
	var editor = new MediumEditor(dom, {
	buttonLabels: 'fontawesome',
	autoLink: true,
	toolbar: {
	//buttons: ['bold', 'italic','underline', 'strikethrough','unorderedlist', 'orderedlist', 'h1','h2','h3','anchor','quote','pre','subscript','superscript','removeFormat']
	buttons: ['bold', 'italic','underline', 'strikethrough','unorderedlist', 'orderedlist', 'h1','h2','h3','anchor','removeFormat']
	},placeholder: {
	text: txt?txt:'说点什么...',
	hideOnClick: true
	}
	});
}

var getWClientHeight = function(){
	if(document.compatMode == 'BackCompat'){
		return document.body.clientHeight;
	}
	if(document.compatMode == 'CSS1Compat'){
		return document.documentElement.clientHeight;
	}
}



$(document).ready(function(){
		$(".panel").css("height",getWClientHeight());
		$(".g-info-panel").css("height",getWClientHeight()-75);

		$(".tool-btn i").click(function(){
			$(".ctl-panel").hide();
			$("#"+this.dataset.flag+"Panel").show();
			$(".tool-btn i").removeClass("b-on").addClass("b-off");
			$(this).removeClass("b-off").addClass("b-on");
			});
		$(".b-on").click();
	registSimpleEditor($('#desc'));
